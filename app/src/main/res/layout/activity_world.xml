<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/world_background"
    android:orientation="vertical">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/worldSettings"
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_setting"
            android:layout_row="0"
            android:layout_column="0"
            android:contentDescription="@string/empty" />
        <ImageView
            android:id="@+id/worldLetter"
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/message_letter"
            android:layout_row="0"
            android:layout_column="2"
            android:contentDescription="@string/empty" />

    </GridLayout>
    <!-- Zone du ciel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cloud_4"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/empty" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cloud_2"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:contentDescription="@string/empty" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cloud_1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/empty" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cloud_4"
            android:layout_marginStart="20dp"
            android:contentDescription="@string/empty" />
    </LinearLayout>
    <!-- Fin de la zone ciel -->
    <!-- Zone verte -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="235dp"
            android:layout_marginTop="0dp">
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/world_factory_area"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldSign1"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/world_dollard_sign"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldFactory1"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/factory_1"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="25dp">
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/world_factory_area"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldSign2"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/world_dollard_sign"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldFactory2"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/factory_1"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="275dp"
            android:layout_marginTop="100dp">
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/world_factory_area"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldSign3"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/world_dollard_sign"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldFactory3"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/factory_1"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="125dp">
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/world_factory_area"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldSign4"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/world_dollard_sign"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldFactory4"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/factory_1"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="200dp">
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/world_factory_area"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldSign5"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/world_dollard_sign"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldFactory5"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/factory_1"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="255dp">
            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/world_factory_area"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldSign6"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/world_dollard_sign"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldFactory6"
                android:layout_gravity="bottom"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/factory_1"
                android:visibility="invisible"
                android:contentDescription="@string/empty" />
        </FrameLayout>
    </RelativeLayout>
    <!-- Fin de la zone verte -->
    <!-- Zone bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@drawable/bottom_bar"
            android:gravity="center"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/worldMarket"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_market"
                android:contentDescription="@string/empty" />
            <ImageView
                android:id="@+id/worldProfile"
                android:src="@drawable/ic_profil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:contentDescription="@string/empty" />
            <EditText
                android:id="@+id/worldCapital"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:enabled="false"
                android:text="@string/cash"
                android:textAlignment="center"
                android:textColor="@color/text_color_states"
                android:inputType="textNoSuggestions"
                tools:ignore="Autofill,LabelFor"
                android:background="@drawable/hours_frame"
                android:padding="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>