<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/popupMarketAdvertisingBack"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_button_back"
                android:contentDescription="@string/empty"
                />

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp">
                <ImageButton
                    android:id="@+id/popupMarketAdvertisingInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:contentDescription="@string/empty" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hatching_frame"
                android:gravity="center">
                <TextView
                    android:id="@+id/popupMarketAdvertisingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advertising"
                    android:textSize="30sp"
                    android:textColor="@color/text_color_states" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center">
            <TextView
                android:id="@+id/marketVoteCastAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_states"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popupMarketCookieDisplay"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/>

                <RelativeLayout
                    android:id="@+id/popupMarketAdvertisingCookieBarBg"
                    android:layout_width="56dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/factoryButtonGreenShadow">
                    <RelativeLayout
                        android:id="@+id/popupMarketAdvertisingCookieBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/marketGraphLine"
                        />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/popupMarketAdvertisingCookie"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/ic_cookie" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popupMarketCupcakeDisplay"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/>

                <RelativeLayout
                    android:id="@+id/popupMarketAdvertisingCupcakeBarBg"
                    android:layout_width="56dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/factoryButtonGreenShadow">
                    <RelativeLayout
                        android:id="@+id/popupMarketAdvertisingCupcakeBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/marketGraphLine"
                        />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/popupMarketAdvertisingCupcake"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/ic_cupcake" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/popupMarketDonutDisplay"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"/>

                <RelativeLayout
                    android:id="@+id/popupMarketAdvertisingDonutBarBg"
                    android:layout_width="56dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@color/factoryButtonGreenShadow">
                    <RelativeLayout
                        android:id="@+id/popupMarketAdvertisingDonutBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/marketGraphLine"
                        />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/popupMarketAdvertisingDonut"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/ic_donut" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>