<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/popupMarketAdvertisingBack"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_button_back"
                android:contentDescription="@string/empty"
                />

            <FrameLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="5dp">
                <ImageButton
                    android:id="@+id/popupMarketAdvertisingInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:contentDescription="@string/empty" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hatching_frame"
                android:gravity="center">
                <TextView
                    android:id="@+id/popupMarketAdvertisingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advertising"
                    android:textSize="30sp"
                    android:textColor="@color/text_color_states" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="20dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:rotation="90">
                    <ProgressBar
                        android:id="@+id/popupMarketAdvertisingCookieBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:max="100"/>
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/popupMarketAdvertisingCookie"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_cookie"
                    android:contentDescription="@string/empty" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:rotation="90">
                    <ProgressBar
                        android:id="@+id/popupMarketAdvertisingCupcakeBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:max="100"/>
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/popupMarketAdvertisingCupcake"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_cupcake"
                    android:contentDescription="@string/empty" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:rotation="90">
                    <ProgressBar
                        android:id="@+id/popupMarketAdvertisingDonutBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:max="100"/>
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/popupMarketAdvertisingDonut"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_donut"
                    android:contentDescription="@string/empty" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>