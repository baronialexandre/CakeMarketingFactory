<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="l3info.projet.cakemarketingfactory">

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_donut"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_donut"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoadingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.FactoryActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.RegistrationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.WorldActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.MessagesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.MarketActivity"
            android:screenOrientation="portrait"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>